{
  "manifest_version": 3,
  "name": "Siri's NewTab",
  "version": "1.0",
  "description": "A momentum replacement for a ~28kb JS experience instead of the 1.7MB of momentum.",
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "icons/32.png",
        "icons/64.png",
        "icons/16.png",
        "icons/128.png"
      ]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_icon": "icons/32.png",
    "default_title": "Siri's NewTab"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
